    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local Run",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                "--algorithm", "bmaml_chaser", // maml, platipus, bmaml, baseline or bmaml_chaser
                "--benchmark", "Sinusoid1D",
                "--k_shot", "10",
                "--num_episodes_per_epoch", "20000", // equals number of training tasks
                "--num_points_per_train_task", "50",
                "--seed", "9999",
                "--num_episodes", "4",
                "--num_inner_updates", "1",
                "--inner_lr", "0.001",
                "--num_test_tasks", "6",
                "--epochs_to_save", "1",
                "--minibatch", "25",
                "--num_epochs", "10",
                "--reuse_models", "True",
                "--num_hidden", "3",
                "--hidden_size", "40",
                "--nlml_testing_enabled", "True",
                //"--KL_weight", "0.01"
            ]
        },
        {
            "name": "BMAML Chaser",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                "--runner", "main_runner", // main_runner, nlml_runner
                "--algorithm", "bmaml_chaser", // maml, platipus, bmaml, or baseline
                "--num_episodes_per_epoch", "100",
                "--num_models", "10",
                "--k_shot", "10",
                "--minibatch", "10",
                "--num_hidden", "3",
                "--num_episodes_per_epoch", "100",
                "--inner_lr", "0.01",
                "--meta_lr", "0.01",
                "--num_train_tasks", "100",
                "--num_validation_tasks", "100",
                "--num_inner_updates", "1",
                "--reuse_models", "False"
            ]
        },
        //SANITY CHECKS (test trivial examples on which the results should be really good)
        {
            "name": "Adaptation Test",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                // changeable parameters
                "--algorithm", "maml", // maml, platipus, bmaml, or baseline
                "--num_inner_updates", "10000", // 0 for initial model, 10000 for many adaptations
                "--num_episodes_per_epoch", "1",
                // don't change parameters below
                "--k_shot", "80",
                "--num_episodes", "0",
                "--num_test_tasks", "0",
                "--num_epochs", "0",
            ]
        },
        {
            "name": "One Task Test",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                "--algorithm", "maml",
                "--minibatch", "1",
                "--minibatch_validation", "0",
                "--minibatch_test", "0",
                "--num_epochs", "5000",
            ],
        },
        // Quick Run for each algorithm to check if it throws errors
        {
            "name": "Quick Run",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                "--algorithm", "platipus",
                "--minibatch", "2",
                "--minibatch_validation", "1",
                "--minibatch_test", "2",
                "--num_epochs", "50",
                "--epochs_to_store", "10"
            ],
        }
    ]
}