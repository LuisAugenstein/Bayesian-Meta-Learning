    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local Run",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                "--algorithm", "maml", // maml, platipus, bmaml, or baseline
                "--num_episodes_per_epoch", "100",
                "--k_shot", "5",
                "--minibatch", "1",
                "--num_train_tasks", "2",
                "--num_validation_tasks", "1",
                "--num_test_tasks", "1",
                "--reuse_models", "True"
            ]
        },
        //SANITY CHECKS (test trivial examples on which the results should be really good)
        {
            "name": "Adaptation Test",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                // changeable parameters
                "--algorithm", "maml", // maml, platipus, bmaml, or baseline
                "--num_inner_updates", "10000", // 0 for initial model, 10000 for many adaptations
                "--num_train_tasks", "1",
                // don't change parameters below
                "--k_shot", "80",
                "--num_validation_tasks", "0",
                "--num_test_tasks", "0",
                "--num_epochs", "0",
            ]
        },
        {
            "name": "One Task Test",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                "--algorithm", "maml",
                "--minibatch", "1",
                "--minibatch_validation", "0",
                "--minibatch_test", "0",
                "--num_epochs", "5000",
            ],
        },
        // Quick Run for each algorithm to check if it throws errors
        {
            "name": "Quick Run",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONWARNINGS": "ignore"
            },
            "args": [
                "--algorithm", "platipus",
                "--minibatch", "2",
                "--minibatch_validation", "1",
                "--minibatch_test", "2",
                "--num_epochs", "50",
                "--epochs_to_store", "10"
            ],
        }
    ]
}